#Write a python program that asks the user for their birth year and calculates their  age.


def calculate_age(birth_year):
    from datetime import datetime
    current_year = datetime.now().year
    age = current_year - birth_year
    return age

# Ask the user for their birth year
user_birth_year = int(input("Please enter your birth year: "))

# Calculate and print the user's age
user_age = calculate_age(user_birth_year)
print(f"You are {user_age} years old.")
