#Write a python program that checks if a substring is present in a given 
 #string
def is_substring_present(substring, string):
   return substring in string

main_string = "Hello, this is an example string."
sub_string = "example"

if is_substring_present(sub_string, main_string):
    print(f"The substring '{sub_string}' is present in the string.")
else:
    print(f"The substring '{sub_string}' is not present in the string.")